{
  "name": "muonview",
  "private": true,
  "workspaces": [
    "packages/mchview2",
    "packages/gql-server"
  ],
  "scripts": {
    "mchview": "yarn workspace mchview2 start",
    "gql-server": "yarn workspace gql-server start",
    "mchview:dev": "yarn workspace mchview2 start:dev",
    "gql-server:dev": "yarn workspace gql-server start:dev",
    "start": "concurrently --kill-others-on-fail \"yarn mchview\" \"yarn gql-server\"",
    "start:dev": "concurrently \"yarn mchview:dev\" \"yarn gql-server:dev\""
  },
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
