{
  "name": "muonview",
  "private": true,
  "workspaces": [
    "packages/mchview2",
    "packages/gql-server"
  ],
  "scripts": {
    "mchview": "yarn workspace mchview2 start",
    "gql-server": "yarn workspace gql-server start",
    "start": "concurrently --kill-others-on-fail \"yarn mchview\" \"yarn gql-server\""
  },
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
